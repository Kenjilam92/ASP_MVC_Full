@{
    ViewData["Title"] = "Add your Wedding Plan";
}
@model Wedding
<div class="d-flex justify-content-between">
    <h1>Plan Your Wedding</h1>
    <p>
        <a href="/dashboard">Dashboard</a> <a href="/logout">Log Out</a>
    </p>
</div>
<form action="/wedding/create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="WedderOne" class="col-sm-4 col-form-label">Wedder One</label>
        <div class="col-sm-8">
            <input asp-for="WedderOne" class="form-control">
            <span asp-validation-for="WedderOne" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="WedderTwo" class="col-sm-4 col-form-label">Wedder Two</label>
        <div class="col-sm-8">
            <input asp-for="WedderTwo" class="form-control">
            <span asp-validation-for="WedderTwo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Date" class="col-sm-4 col-form-label">Date</label>
        <div class="col-sm-8">
            <input asp-for="Date" class="form-control">
            <p>
                <span asp-validation-for="Date" class="text-danger"></span>
            </p>
            <button class="btn btn-primary mt-2" type=submit>Create</button>
        </div>
    </div>
</form>

